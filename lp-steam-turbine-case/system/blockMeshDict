FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.001; // Convert mm to m

vertices
(
    (-0.5 -0.5 0.5)    // 0: x = -500 mm, y = -500 mm, z = 500 mm
    (0.5  -0.5 0.5)    // 1: x = 500 mm, y = -500 mm, z = 500 mm
    (0.5  0.5  0.5)    // 2: x = 500 mm, y = 500 mm, z = 500 mm
    (-0.5 0.5  0.5)    // 3: x = -500 mm, y = 500 mm, z = 500 mm
    (-0.5 -0.5 1.0)    // 4: x = -500 mm, y = -500 mm, z = 1000 mm
    (0.5  -0.5 1.0)    // 5: x = 500 mm, y = -500 mm, z = 1000 mm
    (0.5  0.5  1.0)    // 6: x = 500 mm, y = 500 mm, z = 1000 mm
    (-0.5 0.5  1.0)    // 7: x = -500 mm, y = 500 mm, z = 1000 mm
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (20 20 20) simpleGrading (1 1 1) // 20x20x20 cells for the cavity
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (4 5 6 7) // Top face at z = 1000 mm
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (0 3 2 1) // Bottom face at z = 500 mm
        );
    }
    walls
    {
        type wall;
        faces
        (
            (0 1 5 4) // -y face
            (1 2 6 5) // +x face
            (2 3 7 6) // +y face
            (3 0 4 7) // -x face
        );
    }
);

mergePatchPairs
(
);

