FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.001; // Convert all mm values to m

vertices
(
    (-500 -500 500)    // 0: x = -0.5 m, y = -0.5 m, z = 0.5 m (500 mm)
    (500  -500 500)    // 1: x = 0.5 m, y = -0.5 m, z = 0.5 m (500 mm)
    (500  500  500)    // 2: x = 0.5 m, y = 0.5 m, z = 0.5 m (500 mm)
    (-500 500  500)    // 3: x = -0.5 m, y = 0.5 m, z = 0.5 m (500 mm)
    (-500 -500 1000)   // 4: x = -0.5 m, y = -0.5 m, z = 1.0 m (1000 mm)
    (500  -500 1000)   // 5: x = 0.5 m, y = -0.5 m, z = 1.0 m (1000 mm)
    (500  500  1000)   // 6: x = 0.5 m, y = 0.5 m, z = 1.0 m (1000 mm)
    (-500 500  1000)   // 7: x = -0.5 m, y = 0.5 m, z = 1.0 m (1000 mm)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (20 20 10) simpleGrading (1 1 1) // 20x20x10 cells for 1000x1000x500 mm
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (4 5 6 7) // Top face at z = 1.0 m (1000 mm)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (0 3 2 1) // Bottom face at z = 0.5 m (500 mm)
        );
    }
    walls
    {
        type wall;
        faces
        (
            (0 1 5 4) // -y face
            (1 2 6 5) // +x face
            (2 3 7 6) // +y face
            (3 0 4 7) // -x face
        );
    }
);

mergePatchPairs
(
);

