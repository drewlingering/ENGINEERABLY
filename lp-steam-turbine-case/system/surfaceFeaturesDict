FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      surfaceFeaturesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaces
(
    "turbine.stl"
);

turbine.stl
{
    // Extract features based on angle
    includedAngle 150; // Extract edges with angle > 150 degrees

    // Optional: Define geometric subsets (adjust if needed)
    subset
    {
        nonManifoldEdges no;
        openEdges yes;
        multipleEdges no;
    }
}

