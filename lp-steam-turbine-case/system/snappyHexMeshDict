FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    turbine.stl
    {
        type triSurfaceMesh;
        file "constant/triSurface/turbine.stl";
        name turbine;
    }
}

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 2;

    features
    (
        { file "turbine.stl"; }
    );

    refinementSurfaces
    {
        turbine
        {
            level (2 2); // Refine near the inner surface
            faceType boundary;
            cellZone turbineInside; // Zone for the inner cavity
            cellZoneInside pointAndNormal (0 0 0.75 0 0 1); // Normal points outward
        }
    }

    refinementRegions
    {
        // Optional refinement near boundaries
        inlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (0 0 1.0 0 0 1); // Near z = 1000 mm
        }
        foreOutlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (-0.5 0 0.75 0 0 1); // Near x = -500 mm
        }
        aftOutlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (0.5 0 0.75 0 0 1); // Near x = 500 mm
        }
    }

    locationInMesh (0 0 0.75); // Inside the cavity, within 500 mm radius
    maxRefinement 3; // Limit refinement to prevent breaching outer limits
    // Ensure mesh stays within STL bounds
    minCellSize 0.01; // Minimum cell size in meters (10 mm) to control expansion
}

snapControls
{
    nSmoothPatch 3;
    tolerance 1.0;
    nSolveIter 30;
    nRelaxIter 5;
}

addLayersControls
{
    layers
    {
        "turbine"
        {
            nSurfaceLayers 1;
        }
    }
    relativeSizes true;
    expansionRatio 1.0;
    finalLayerThickness 0.3;
    minThickness 0.1;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minFlatness 0.5;
    minVol 1e-13;
    minTetQuality -1e30;
    minArea -1;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.02;
    minVolRatio 0.01;
    minTriangleTwist -1;
    nSmoothScale 4;
    errorReduction 0.75;
}

mergeTolerance 1e-6;

