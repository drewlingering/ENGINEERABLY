FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    turbine.stl
    {
        type triSurfaceMesh;
        file "constant/triSurface/turbine.stl";
        name turbine;
    }
}

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 2;

    features
    (
        { file "turbine.stl"; }
    );

    refinementSurfaces
    {
        turbine
        {
            level (2 2); // Refine near the inner surface
            faceType boundary;
            cellZone turbineInside; // Zone for the inner cavity
            cellZoneInside pointAndNormal (0 0 0.75 0 0 1); // Normal points outward
        }
    }

    refinementRegions
    {
        inlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (0 0 1.0 0 0 1); // Near z = 1.0 m
        }
        foreOutlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (-0.5 0 0.75 0 0 1); // Near x = -0.5 m
        }
        aftOutlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (0.5 0 0.75 0 0 1); // Near x = 0.5 m
        }
    }

    locationInMesh (0 0 0.75); // Inside the cavity, within 0.5 m radius
    maxRefinement 3; // Limit refinement to prevent breaching outer limits
    minCellSize 0.01; // Minimum cell size 10 mm (0.01 m) to control expansion
    // Ensure mesh stays within STL bounds (-0.75 -2.0 -2.0 to 0.75 2.0 3.5 m)
}

snapControls
{
    nSmoothPatch 3;
    tolerance 1.0;
    nSolveIter 30;
    nRelaxIter 5;
}

addLayersControls
{
    layers
    {
        "turbine"
        {
            nSurfaceLayers 1;
        }
    }
    relativeSizes true;
    expansionRatio 1.0;
    finalLayerThickness 0.3;
    minThickness 0.1;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minFlatness 0.5;
   ...
