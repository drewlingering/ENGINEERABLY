FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    turbine.stl
    {
        type triSurfaceMesh;
        name turbine;
    }
}

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 3;

    features
    (
        { file "turbine.stl"; } // Reference the STL directly for features
    );

    refinementSurfaces
    {
        turbine
        {
            level (2 2);
        }
    }

    refinementRegions
    {
        inlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (0 0 3.4 0 0 1); // Near z = 3.5 m (3500 mm)
        }
        foreOutlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (-1.0 0 -0.5 0 0 1); // x = -1000 mm, z = -500 mm
        }
        aftOutlet
        {
            mode distance;
            levels ((0.1 2));
            cellZone inside;
            cellZoneInside pointAndNormal (1.0 0 -0.5 0 0 1); // x = 1000 mm, z = -500 mm
        }
    }

    resolveFeatureAngle 30;
    locationInMesh (0 0 -0.5); // Seed inside cavity, at torus center (500 mm below origin)
    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 1.0;
    nSolveIter 30;
    nRelaxIter 5;
}

addLayersControls
{
    layers
    {
        "turbine"
        {
            nSurfaceLayers 1;
        }
    }
    relativeSizes true;
    expansionRatio 1.0;
    finalLayerThickness 0.3;
    minThickness 0.1;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minFlatness 0.5;
    minVol 1e-13;
    minTetQuality -1e30;
    minArea -1;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.02;
    minVolRatio 0.01;
    minTriangleTwist -1;
    nSmoothScale 4;
    errorReduction 0.75;
}

mergeTolerance 1e-6;

